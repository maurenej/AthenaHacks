<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFFFFF"
    tools:context="com.example.su.athenahacks.MainActivity"
    android:textAlignment="gravity">

    <Button
        android:text="Door"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/door"
        android:textColorLink="@android:color/holo_purple"
        android:background="#80D8FF"
        android:textColor="@android:color/background_light"
        android:layout_alignBottom="@+id/house"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textAllCaps="true" />

    <Button
        android:text="RGB Display"
        android:layout_height="wrap_content"
        android:id="@+id/display"
        android:textColorLink="@android:color/holo_purple"
        android:background="#80D8FF"
        android:textColor="@android:color/background_light"
        android:layout_width="200dp"
        android:textSize="18sp"
        android:layout_alignTop="@+id/house"
        android:layout_alignLeft="@+id/pink_cloud"
        android:layout_alignStart="@+id/pink_cloud"
        android:textAllCaps="true" />

    <Button
        android:text="sound"
        android:layout_height="wrap_content"
        android:id="@+id/sound"
        android:textColorLink="@android:color/holo_purple"
        android:background="#80D8FF"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:layout_alignTop="@+id/house"
        android:layout_alignRight="@+id/pink_cloud"
        android:layout_alignEnd="@+id/pink_cloud"
        android:textAllCaps="true"
        android:layout_width="85dp" />

    <Button
        android:text="light"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/light"
        android:background="#80D8FF"
        android:textColor="@android:color/background_light"
        android:rotation="90"
        android:textSize="18sp"
        android:textAllCaps="true"
        android:layout_alignBaseline="@+id/house"
        android:layout_alignBottom="@+id/house"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="-25dp" />

    <TextView
        android:layout_width="400dp"
        android:id="@+id/house"
        android:background="#F8BBD0"
        android:text="HOUSE"
        android:textAllCaps="true"
        android:textAlignment="gravity"
        android:gravity="center_vertical|center_horizontal"
        android:fontFamily="sans-serif"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="normal|italic"
        android:layout_height="250dp"
        android:layout_above="@+id/pink_cloud"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="31dp" />

    <TextView
        android:text="Welcome Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textAllCaps="true"
        android:textColor="#ffaaaaff"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp" />

    <ImageView
        android:layout_width="400dp"
        android:id="@+id/ribbon"
        android:background="#ffaaaaff"
        android:layout_height="15dp"
        android:layout_above="@+id/manual"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="36dp" />

    <ImageView
        app:srcCompat="@drawable/pinkcloud"
        android:id="@+id/pink_cloud"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginBottom="32dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Choose  a feature to learn how it works!"
        android:id="@+id/instruction"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:layout_height="100dp"
        android:layout_width="200dp"
        android:textColor="#FFFFFF"
        android:layout_alignTop="@+id/pink_cloud"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <Button
        android:text="MANUAL"
        android:layout_height="50dp"
        android:layout_width="100dp"
        android:layout_below="@+id/instruction"
        android:layout_alignLeft="@+id/door"
        android:layout_alignStart="@+id/door"
        android:background="#80D8FF"
        android:textColor="#FFFFFF"
        android:id="@+id/manual" />

</RelativeLayout>
