<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_display"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFFFFF"
    tools:context="com.example.su.athenahacks.Display">

    <Button
        android:text="SHOW TEMP"
        android:layout_width="150dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/tempButton"
        android:background="#80D8FF"
        android:textAlignment="center"
        android:layout_height="40dp"
        android:textColor="#FFFFFF" />

    <Button
        android:text="submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/changeColors"
        android:background="#ffaaaf"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/response"
        android:layout_centerHorizontal="true"
        android:elevation="0dp" />

    <TextView
        android:text=". . STATUS . . "
        android:layout_width="450dp"
        android:id="@+id/response"
        android:gravity="center"
        android:background="#FFF3E0"
        android:textColor="@color/colorPrimaryDark"
        android:layout_height="30dp"
        android:textAllCaps="true"
        android:layout_below="@+id/blue_val"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

    <TextView
        android:layout_width="450dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="62dp"
        android:id="@+id/ribbon"
        android:background="@color/colorPrimaryDark"
        android:layout_height="15dp" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/pinkcloud"
        android:id="@+id/pink_cloud"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Enter values between 000-250 (the exact format) to mix colors and change the LED display!"
        android:layout_height="wrap_content"
        android:id="@+id/instruct"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:layout_width="180dp"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/blue_val"
        android:background="#FFF3E0"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:layout_below="@+id/green_val"
        android:layout_alignLeft="@+id/green_val"
        android:layout_alignStart="@+id/green_val"
        android:textColor="@color/colorPrimaryDark" />

    <Button
        android:text="SHOW TIME"
        android:layout_width="150dp"
        android:id="@+id/timeButton"
        android:background="#80D8FF"
        android:textAlignment="center"
        android:layout_height="40dp"
        android:textColor="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="GREEN: #"
        android:layout_height="wrap_content"
        android:id="@+id/greenView"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="#ffaaaf"
        android:layout_alignBaseline="@+id/green_val"
        android:layout_alignBottom="@+id/green_val"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="100dp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="BLUE: #"
        android:layout_height="wrap_content"
        android:id="@+id/blueView"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="#ffaaaf"
        android:layout_below="@+id/green_val"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="100dp"
        android:textStyle="normal|bold" />

    <EditText
        android:layout_width="100dp"
        android:inputType="number"
        android:layout_marginTop="25dp"
        android:id="@+id/red_val"
        android:layout_height="40dp"
        android:background="#FFF3E0"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/tempButton"
        android:layout_alignRight="@+id/changeColors"
        android:layout_alignEnd="@+id/changeColors" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/green_val"
        android:background="#F5F5F5"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/red_val"
        android:layout_alignLeft="@+id/red_val"
        android:layout_alignStart="@+id/red_val" />

    <TextView
        android:text="RED: #"
        android:layout_height="wrap_content"
        android:id="@+id/redView"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="#ffaaaf"
        android:layout_width="100dp"
        android:layout_alignBaseline="@+id/red_val"
        android:layout_alignBottom="@+id/red_val"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:inputType="textCapCharacters|textPersonName"
        android:id="@+id/tempUnit"
        android:autoText="true"
        android:background="#FFF3E0"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignTop="@+id/greenView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_height="wrap_content"
        android:id="@+id/tempUnit"
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="#ffaaaf"
        android:layout_width="100dp"
        android:text="Temperature Unit"
        android:textStyle="normal|bold"
        android:layout_alignTop="@+id/redView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
