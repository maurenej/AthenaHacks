<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sound"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFFFFF"
    tools:context="com.example.su.athenahacks.Sound">

    <RadioGroup
        android:id="@+id/radioSound"
        android:layout_width="450dp"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_height="180dp">
            <RadioButton
                android:text="Alarm"
                android:id="@+id/SOUND_1"
                android:textSize="18sp"
                android:textColor="#ffaaaf"
                android:buttonTint="#ffaaaaff"
                android:textStyle="normal|bold"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="30dp"
                android:layout_width="100dp"
                android:textAllCaps="false" />

            <RadioButton
                android:text="Sound 2"
                android:id="@+id/SOUND_2"
                android:textSize="18sp"
                android:textColor="#ffaaaf"
                android:buttonTint="#ffaaaaff"
                android:textStyle="normal|bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp" />

            <RadioButton
                android:text="Sound 3"
                android:id="@+id/SOUND_3"
                android:textSize="18sp"
                android:textColor="#ffaaaf"
                android:buttonTint="#ffaaaaff"
                android:textStyle="normal|bold"
                android:layout_width="wrap_content"
                android:gravity="center|left"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />

    </RadioGroup>

    <Button
        android:text="PLAY"
        android:layout_height="wrap_content"
        android:id="@+id/play_button"
        android:layout_weight="1"
        android:background="#ffaaaf"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_width="200dp"
        android:layout_below="@+id/radioSound"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="450dp"
        app:srcCompat="@color/colorPrimaryDark"
        android:id="@+id/ribbon"
        android:layout_height="15dp"
        android:layout_alignTop="@+id/instruct"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp" />

    <ImageView
        android:layout_width="300dp"
        app:srcCompat="@drawable/pinkcloud"
        android:id="@+id/pink_cloud"
        android:layout_below="@+id/play_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp"
        android:layout_height="150dp" />

    <TextView
        android:text="Choose a sound to play in your house!"
        android:id="@+id/instruct"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_alignBottom="@+id/pink_cloud"
        android:layout_alignLeft="@+id/play_button"
        android:layout_alignStart="@+id/play_button" />

    <TextView
        android:text=". . STATUS . ."
        android:layout_width="450dp"
        android:layout_height="30dp"
        android:id="@+id/response"
        android:background="#FFF3E0"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:gravity="center"
        android:textAllCaps="true"
        android:layout_below="@+id/play_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />

</RelativeLayout>
